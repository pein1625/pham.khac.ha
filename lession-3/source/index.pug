          li.category-2__item.js-category-2__item Trang sức
          li.category-2__item.category-2__item--last.js-category-2__item Quà tặng
        // home product slider
        .product-slider.js-product-tab(data-product='new')
          .product-slider__next.js-next-product
            img(src="images/icon-arrow-right.png", alt="")
          .product-slider__prev.js-prev-product
            img(src="images/icon-arrow-left.png", alt="")
          .slider.owl-carousel.js-product-slider
            each item in [1, 2, 3, 4, 5, 6]
              .slider__slide
                +product("images/product-3.png")
        .product-slider.js-product-tab(data-product='sell')
          .product-slider__next.js-next-product
            img(src="images/icon-arrow-right.png", alt="")
          .product-slider__prev.js-prev-product
            img(src="images/icon-arrow-left.png", alt="")
          .slider.owl-carousel.js-product-slider
            each item in [1, 2, 3, 4, 5, 6]
              .slider__slide
                +product("images/product-"+item+".png")
        .product-slider.js-product-tab(data-product='special')
          .product-slider__next.js-next-product
            img(src="images/icon-arrow-right.png", alt="")
          .product-slider__prev.js-prev-product
            img(src="images/icon-arrow-left.png", alt="")
          .slider.owl-carousel.js-product-slider
            each item in [1, 2, 3, 4, 5, 6]
              .slider__slide
                +product("images/product-4.png")

      // more info
      .home-info.container
        //social
        ul.social
          li.social__item
            a.social__link(href="#")
              i.fa.fa-facebook.social__icon
              | FACEBOOK
          li.social__item
            a.social__link(href="#")
              i.fa.fa-twitter.social__icon
              | TWITTER
          li.social__item
            a.social__link(href="#")
              i.fa.fa-instagram.social__icon
              | INSTAGRAM
          li.social__item
            a.social__link(href="#")
              i.fa.fa-google-plus.social__icon
              | GOOGLE +
          li.social__item
            a.social__link(href="#")
              i.fa.fa-pinterest-p.social__icon
              | PINTEREST
          li.social__item
            a.social__link(href="#")
              i.fa.fa-linkedin.social__icon
              | LINKEDIN
        //grid 3 block
        .row
          .col-md-4
            .widget.home-about
              h5.widget__heading VỀ CHÚNG TÔI
              .hash-line.hash-line--w100 ///////////
              .home-about__logo
                img.home-about__img(src="images/logo.png", alt="")
