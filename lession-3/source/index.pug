doctype html
html(lang="en")
  +head
  body
    +header
    main.main
      //banner
      .banner
        .container
          .banner__wrap
            .banner-product
              img.banner-product__img(src="images/banner-flower.png", alt="")
              h1.banner-product__name GreenVera
              h5.banner-product__desc Sản phẩm tinh dầu dưỡng da mới nhất của Mandala
              span.banner-product__price GIÁ CHỈ 750.000
                sup đ
              a.banner-product__buy(href="#") MUA HÀNG
            .banner__image
              img.banner__img(src="images/banner-girl.png", alt="")

      .container
        //intro
        .intro.row
          .col-md-4.intro__item
            img.intro__icon(src="images/icon-plane.png", alt="")
            .intro__text Miễn phí vận chuyển
          .col-md-4.intro__item
            img.intro__icon(src="images/icon-gift.png", alt="")
            .intro__text Nhận ngay quà tặng trị giá 350.000đ
          .col-md-4.intro__item.intro__item--last
            img.intro__icon(src="images/icon-star.png", alt="")
            .intro__text Giảm 30% cho đơn hàng trên 5.000.000đ
        //grid
        .row.row-gutter-5
          .col-md-6.col-gutter-5
            .row.row-gutter-5
              .col-6.col-gutter-5
                a(href="#").homegrid__link
                  img.homegrid__img(src="images/home-grid-1.png", alt="")
              .col-6.col-gutter-5
                .homegrid__card.homegrid__card-1
                  h1.homegrid__heading SỮA TẮM
                  .hash-line.homegrid__hashline ///////
              .col-6.col-gutter-5
                .homegrid__card.homegrid__card-2
                  h1.homegrid__heading NƯỚC HOA
                  .hash-line.homegrid__hashline ///////
              .col-6.col-gutter-5
                a(href="#").homegrid__link
                  img.homegrid__img(src="images/home-grid-2.png", alt="")
          .col-md-6.col-gutter-5
            a(href="#").homegrid__link
              img.homegrid__img(src="images/home-grid-3.png", alt="")
