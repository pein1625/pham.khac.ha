      //product
      .home-product
        ul.category
          li.category__item.js-category__item(data-tab="new")
            span Sản phẩm mới
          li.category__line
          li.category__item.js-category__item.active(data-tab="sell")
            span Sản phẩm bán chạy
          li.category__line
          li.category__item.category__item--last.js-category__item(data-tab="special")
            span Sản phẩm đặc biệt
        .hash-line ///////////////    
        ul.category-2.js-category-2(data-cate="new")
          li.category-2__item.js-category-2__item Mỹ phẩm
          li.category-2__item.js-category-2__item Chăm sóc da
          li.category-2__item.js-category-2__item Dành cho tóc
          li.category-2__item.js-category-2__item.active Nước hoa
          li.category-2__item.js-category-2__item Trang sức
          li.category-2__item.category-2__item--last.js-category-2__item Quà tặng
        ul.category-2.js-category-2(data-cate="sell")
          li.category-2__item.js-category-2__item Mỹ phẩm
