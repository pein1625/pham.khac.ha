          .col-md-6.col-gutter-5
            .row.row-gutter-5
              .col-6.col-gutter-5
                .homegrid__card.homegrid__card-3
                  h1.homegrid__heading TRANG SỨC
                  .hash-line.homegrid__hashline ///////
              .col-6.col-gutter-5
                a(href="#").homegrid__link
                  img.homegrid__img(src="images/home-grid-5.png", alt="")
              .col-6.col-gutter-5
                a(href="#").homegrid__link
                  img.homegrid__img(src="images/home-grid-6.png", alt="")
              .col-6.col-gutter-5
                .homegrid__card.homegrid__card-4
                  a(href="#").homegrid__link
                    img.homegrid__img(src="images/home-grid-7.png", alt="")
        //speak
        .speak
          img.speak__bg(src="images/speak-bg.png", alt="")
          .speak__slider.owl-carousel.js-speak__slider
            .speak__slide
