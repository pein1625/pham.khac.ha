          a.banner-product__buy(href="#") MUA HÀNG
        img.banner__img(src="images/banner-girl.png", alt="")
      .container
        //intro
        .row
          .col-md-4
            .intro
              img.intro__icon(src="images/icon-plane.png", alt="")
              .intro__text Miễn phí vận chuyển
          .col-md-4
            .intro
              img.intro__icon(src="images/icon-gift.png", alt="")
              .intro__text Nhận ngay quà tặng trị giá 350.000đ
