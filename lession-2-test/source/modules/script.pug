mixin script
  script(src="https://code.jquery.com/jquery-3.2.1.min.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js")
  script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.2.1/owl.carousel.js")
  script.
    $(document).ready(function(){

      var banner_slide = $('.slider');
      banner_slide.owlCarousel({
        loop: true,
        nav: false,
        dots: true,
        items: 1
      });

      var product_2 = $('.product-2__slider');
      product_2.owlCarousel({
          loop: true,
          margin: 30,
          nav: false,
          dots: false,
          items: 3
      });
      $('.owl-next').click(function() {
          product_2.trigger('next.owl.carousel');
      })
      $('.owl-prev').click(function() {
          product_2.trigger('prev.owl.carousel');
      });

      var brands = $('.slider-2');
      brands.owlCarousel({
        loop: true,
        margin: 120,
        nav: false,
        dots: false,
        items: 5
      });
      $('.brands-next').on('click', function(){
        brands.trigger('next.owl.carousel');
      });
      $('.brands-prev').on('click', function(){
        brands.trigger('prev.owl.carousel');
      });

    });
