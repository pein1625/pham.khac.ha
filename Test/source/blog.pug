include modules/head/head
include modules/header/header
include modules/footer/footer
include modules/components/blog
include modules/components/nav
include modules/components/breadcumb

doctype html
html
  +head
  body
    +header
    +nav
    +breadcumb('Trang chá»§', 'Blog')
    .container
      h2.title-left BLOG
      .row.blog-grid
        each i in [1, 2, 3, 4, 5, 6, 7, 8, 9]
          if ((i + 1) % 3 === 0)
            .col-lg-4.col-md-6
              +blog("images/blog-2.png")
          else
            .col-lg-4.col-md-6
              +blog("images/blog-1.png")

    +footer
    script(src="js/main.js")
